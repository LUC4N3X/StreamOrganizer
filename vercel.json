{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        // Rimosso il flag --force. Vercel usa 'npm install' di default.
        "installCommand": "npm install" 
      }
    },
    {
      // Questo glob è più specifico e garantisce che solo i contenuti di 'public' siano considerati statici
      "src": "public/**", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1. API Routes: Gestisce tutte le chiamate API
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    // 2. Specific Static Assets: Serve i file statici con hash o nomi specifici (es. index.html, favicon.ico)
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg|txt|json|webmanifest|woff2|ttf))$",
      "dest": "public/$1"
    },
    // 3. SPA Fallback: Qualsiasi altra richiesta viene reindirizzata a index.html per la gestione lato client
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 * * * *" 
    }
  ]
}
