{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": { // NUOVO BLOCCO
        "installCommand": "npm install --force" // Forza l'installazione
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // ... (Le tue route rimangono invariate) ...
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/(.*\\.(css|js|ico|png|jpg|svg|txt|json|webmanifest))$",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 * * * *" 
    }
  ]
}
