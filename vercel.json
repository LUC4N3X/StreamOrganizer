{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*\\.(?:css|js|ico|png|jpg|jpeg|svg|txt|json|webmanifest|woff2?|ttf|eot))$",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(?:js|css|png|jpg|jpeg|svg|webmanifest|woff2?|ttf|eot))$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
